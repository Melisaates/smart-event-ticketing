generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TicketStatus {
  AVAILABLE
  RESERVED
  SOLD
  DISABLED
}

model Ticket {
  id         String  @id @default(uuid())
  eventId    String
  seatNumber String
  price     Float
  status    TicketStatus @default(AVAILABLE)
  createdAt  DateTime @default(now())

  @@unique([eventId, seatNumber])
}
